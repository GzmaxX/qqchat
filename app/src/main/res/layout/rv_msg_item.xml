<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_msg_user"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/image_user_1" />

    <TextView
        android:id="@+id/tv_msg_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_msg_user"
        android:text="陈奕迅"
        android:textColor="#000"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/tv_msg_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="上午9：16"
        android:textColor="#949494"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/tv_msg_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_msg_name"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@id/tv_msg_time"
        android:layout_toRightOf="@id/iv_msg_user"
        android:ellipsize="end"
        android:maxEms="15"
        android:maxLines="1"
        android:text="你听过我的歌曲吗"
        android:textColor="#949494" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/iv_msg_user"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/iv_msg_user"
        android:background="#e9e9e9" />


</RelativeLayout>